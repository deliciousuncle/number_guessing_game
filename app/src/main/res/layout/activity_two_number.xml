<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".two_number"
    android:background="@drawable/two_number_activity"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="20"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/num1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:textSize="30dp"
            android:textStyle="bold"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/num4"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="30dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/Degree_of_difficulty_text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="30dp"
            android:textStyle="bold"
            android:gravity="center"
            />

    </LinearLayout>

    <ListView
        android:id="@+id/listview"
        android:layout_width="462dp"
        android:layout_height="319dp"
        android:layout_weight="20"></ListView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="60"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/number_0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="0"
                android:textStyle="bold"
                android:onClick="inputnum"
               android:background="#00000000"
                android:textColor="@color/black"
                android:textSize="25dp"
                />
<!--  app:backgroundTint="@null" 把預設背景給null -->
            <Button
                android:id="@+id/number_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="1"
                android:textSize="25dp"
                android:textStyle="bold"
                android:onClick="inputnum"
                android:textColor="@color/black"
                app:backgroundTint="@null"
                android:background="#00000000"/>

            <Button
                android:id="@+id/number_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="2"
                android:textSize="25dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:onClick="inputnum"
                app:backgroundTint="@null"
                android:background="#00000000"/>

            <Button
                android:id="@+id/number_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="3"
                android:textSize="25dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:onClick="inputnum"
                android:background="#00000000"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/number_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="4"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="25dp"
                android:onClick="inputnum"
                android:background="#00000000"/>

            <Button
                android:id="@+id/number_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="5"
                android:textSize="25dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:onClick="inputnum"
                android:background="#00000000"/>

            <Button
                android:id="@+id/number_6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="6"
                android:textSize="25dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:onClick="inputnum"
                android:background="#00000000"/>

            <Button
                android:id="@+id/number_7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="7"
                android:textColor="@color/black"
                android:textSize="25dp"
                android:textStyle="bold"
                android:onClick="inputnum"
                android:background="#00000000"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/number_8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="8"
                android:textSize="25dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:onClick="inputnum"
                android:background="#00000000"/>

            <Button
                android:id="@+id/number_9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="9"
                android:textColor="@color/black"
                android:textSize="25dp"
                android:textStyle="bold"
                android:onClick="inputnum"
                android:background="#00000000"/>

            <Button
                android:id="@+id/btn_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="刪除"
                android:textColor="@color/black"
                android:textSize="25dp"
                android:textStyle="bold"
                android:onClick="btn_delete"
                android:background="#00000000"/>

            <Button
                android:id="@+id/btn_clear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:text="清空"
                android:textSize="25dp"
                android:textStyle="bold"
                android:onClick="btn_clear"
                android:background="#00000000"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="退出"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:onClick="btn_back"
                android:textSize="25dp"
                android:background="#00000000"
                />

            <Button
                android:id="@+id/btn_send"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:text="送出"
                android:textSize="25dp"
                android:textStyle="bold"
                android:onClick="btn_send"
                android:background="#00000000"/>

            <Button
                android:id="@+id/btn_replay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="重玩"
                android:textSize="25dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:onClick="btn_replay"
                android:background="#00000000"
                />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>